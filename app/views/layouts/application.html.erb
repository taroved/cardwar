<!DOCTYPE html>
<html>
<head>
  <title>Cardwar</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <%= yield %>
    </div>
    <div class="col-sm-4">
    <%= content_for?(:side_menu) ? yield(:side_menu) : ''%>
    </div>
  </div>
  <%= render 'widgets/disqus' %>
</div>
</body>
</html>
